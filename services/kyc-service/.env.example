# Application
APP_NAME=kyc-service
APP_ENV=development
APP_PORT=8080
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=kyc
DB_PASSWORD=kyc
DB_NAME=kyc
DB_SSL_MODE=disable

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRATION=24h

# Storage
STORAGE_TYPE=local
STORAGE_PATH=/data/documents
# For S3
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_BUCKET=

# ML Service
ML_SERVICE_URL=http://kyc-ml-service:8000
ML_SERVICE_TIMEOUT=30s

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090